<Window x:Class="FolderLocker.CheckPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderLocker"
        mc:Ignorable="d"
         Icon="app_icon.ico"
        Title="Check Password" Height="300
        " Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFECECEC">
        <PasswordBox PasswordChanged="UpdatePassword" Name="p" PasswordChar="*" Margin="0,0,47,118" VerticalContentAlignment="Center" FontSize="18" HorizontalAlignment="Right" Width="350" Height="35" VerticalAlignment="Bottom"/>
        <Label Content="Press you password" Margin="0,0,231,184" FontSize="18" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="166"/>
        <Button Content="Submit" Margin="0,189,307,0" Click="Button_Click" FontSize="18" RenderTransformOrigin="0.839,-0.386" HorizontalAlignment="Right" Width="90" Height="35" VerticalAlignment="Top"/>
        <Label   Visibility="Hidden" Name="warn" Content="password is not valid." Margin="0,189,47,0" FontSize="18" Background="{x:Null}" Foreground="Red" Width="180" HorizontalAlignment="Right" Height="35" VerticalAlignment="Top"/>
    </Grid>
</Window>
